{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "strictNullChecks": false,
    "watch": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
